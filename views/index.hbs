<h1>{{title}}</h1>
<div class="row">
{{#each products as |product|}}
	<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{product.imagePath}}" alt="baseball cap" class="img-responsive">
      <div class="caption">
        <h3>{{product.title}}</h3>
        <p class="description">{{product.description}}</p>
        <div class="clearfix">
        	{{#if product.colors}}
        		<form class="form-horizontal">
        			<div class="form-group">
        				<label class="col-sm-2 control-label">Color</label>
        				<div class="col-sm-10">
        					{{#each product.colors as |color|}}
        						<label class="radio-inline">
        							<input type="radio" name="color" id="{{color}}" value="{{color}}">{{color}}
        						</label>
        					{{/each}}
        				</div>
        			</div>
        			{{#if product.sizes}}
						<div class="form-group">
						    <label class="col-sm-2 control-label">Size</label>
							<div class="col-sm-10">
								<select class="form-control">
								{{#each product.sizes as |size|}}
									<option>{{size}}</option>
								{{/each}}
								</select>
							</div>
						</div>
        			{{/if}}
        		</form>
        	{{/if}}
        	<div class="price pull-left">${{product.price}}</div>
        	<a href="/add-to-cart/{{product._id}}" class="btn btn-warning pull-right" role="button">Add to Cart</a>
        </div>
      </div>
    </div>
    </div>
{{/each}}
</div>